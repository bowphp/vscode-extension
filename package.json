{
    "name": "bow-tintin",
    "displayName": "Bow Tintin",
    "description": "Bow Tintin Language Support (https://github.com/bowphp/tintin).",
    "version": "0.0.5",
    "author": "Franck DAKIA",
    "icon": "icons/bow.jpeg",
    "publisher": "papac",
    "bugs": "https://github.com/bowphp/vscode-extension/issues",
    "engines": {
        "vscode": "^1.45.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bowphp/vscode-extension.git"
    },
    "categories": [
        "Programming Languages",
        "Formatters",
        "Snippets"
    ],
    "snippets": [
        {
          "language": "tintin",
          "path": "./snippets/snippets.code-snippets"
        }
    ],
    "contributes": {
        "languages": [
            {
                "id": "tintin",
                "aliases": ["Bow Tintin", "tintin"],
                "extensions": [".tintin.php", ".tintin"],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tintin",
                "scopeName": "js.text.html.css.php.tintin",
                "path": "./syntaxes/tintin.tmLanguage.json"
            }
        ]
    }
}
